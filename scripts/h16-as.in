#! /bin/sh

pkgdatadir=@pkgdatadir@

#
# For testing - if the substitution hasn't happened
# and there are still '@' characters in the value above
#
if [ `echo $pkgdatadir | sed 's/[^@]//g'` != "" ]; then
  pkgdatadir=./
fi
#
# Directories based upon pkgdata
#
m4_dir=$pkgdatadir/scripts
tape_dir=$pkgdatadir/tapes

#
# Some programs this script uses...
#
sedprog="${SEDPROG-sed}"
awkprog="${AWKPROG-awk}"
rmprog="${RMPROG-rm}"
mktmpprog="${MKTMPPROG-mktmp}"
m4prog="${M4PROG-m4}"

h16prog="${H16PROG-h16}"

#
# help and usage information
#
usage="Usage: $0 [--help] [-o <object-file>] [-a] <src-file>" 
help="Options:
--help     display this help and exit.
-o         Specify object filename
           (default: src-file with extension replaced by \".obj\")
-a         Request a listing file
           (filename: src-file with extension replaced by \".lst\")"

#
# flags and values from argument parsing
#
listing=false
have_srcnam=false
have_objnam=false

while test -n "$1"; do
  case $1 in
    -a) listing=true
        shift
        continue;;

    -o) if [ "$#" -gt 2 ]; then
          have_objnam=true
          objnam=$2
	  shift
	  shift
        else
          echo "$usage"; exit 1
	fi
	continue;;

    --help) echo "$usage"; echo "$help"; exit 0;;

    *)  if [ "$#" -eq 1 ]; then
          srcnam=$1
          have_srcnam=true
          shift
	else
          echo "$usage"; exit 1
	fi
	break;;
  esac
done

if [ $have_srcnam = false ]; then
  echo "$usage"; exit 1
fi

if [ $listing = false ]; then
aflags=100220
else
aflags=100223
fi

#
# Files used by this script
#
m4_filename=$m4_dir/h16-as.m4
slstnam=$tape_dir/dap-16_mod2_slst.ptp

#
# Compute filenames
#
dirnam=`dirname $srcnam`
basnam=`echo $srcnam | $sedprog 's/\.[^.]*$//'`

lstnam=$dirnam/$basnam.lst

if [ $have_objnam = false ]; then
  objnam=$dirnam/$basnam.obj
fi

tmpnam=`$mktmpprog -t h16-commands.XXXXXX` || tmpnam=/tmp/h16-commands.$$

$m4prog -DAFLAGS=$aflags -DSLSTNAM=$slstnam -DSRCNAM=$srcnam -DLSTNAM=$lstnam -DOBJNAM=$objnam $m4_filename > $tmpnam && \
$h16prog -t $tmpnam && \
errors=`$awkprog -- '/WARNING OR ERROR FLAGS/{print $1}' $lstnam` && \
echo $errors errors && \
status=$errors

$rmprog -f $tmpnam

exit $status
